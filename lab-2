#include <iostream>
#include <math.h>
using namespace std;
int main() {
    cout<<"Задание 1"<<endl;
    float x1,x2,y1,y2,d;
    cout<<"Введите координаты х1 х2 у1 у2"<<endl;
    cin>>x1;
    cin>>x2;
    cin>>y1;
    cin>>y2;
    d=sqrt((x2-x1)*(x2-x1)+(y2-y1)*(y2-y1));
    cout<<"Растояние между координатами = "<<d<<endl;
    
    cout<<"Задание 2"<<endl;
    float AC,BC,A,B,C,SUM;
    cout<<"Введите координаты A B C"<<endl;
    cin>>A;
    cin>>B;
    cin>>C;
    BC=abs(B-C);
    AC=abs(A-C);
    SUM=abs(AC+BC);
    cout<<"Растояние AC="<<AC<<endl<<"Растояние BC="<<BC<<endl<<"Растояние AC и BC="<<SUM<<endl;
    
    cout<<"Задание 3"<<endl;
    float a,b,c,ac,bc,sum;
    cout<<"Введите координаты A B C"<<endl;
    cin>>a;
    cin>>b;
    cin>>c;
    if (c<=a && c>=b) {
        cout<<"error 404\n";
    }
    else{
        bc=abs(B-C);
        ac=abs(A-C);
        sum=abs(ac+bc);
        cout<<"Растояние ac="<<ac<<endl<<"Растояние bc="<<bc<<endl<<"Растояние ac и bc="<<sum<<endl;
    }
    
    cout<<"Задание 4"<<endl;
    float X1,X2,Y1,Y2,S,P;
    cout<<"Введите координаты х1 х2 у1 у2"<<endl;
    cin>>X1;
    cin>>X2;
    cin>>Y1;
    cin>>Y2;
    P=2*(abs(X1-X2)+(X1-Y1));
    S=abs((X1-X2)*(X1-X2) * abs((X1-Y1)*(X1-Y1)));
    cout<<"Площадь = "<<S<<", Периметр ="<<P<<endl;
    
    return 0;
}
